{
  "lerna": "3.13.4",
  "npmClient": "npm",
  "packages": [
    "benchmark/*",
    "backwards-compatability/*",
    "metapackages/*",
    "packages/*",
    "examples/*",
    "integration-tests/*"
  ],
  "version": "0.18.2",
  "command": {
    "publish": {
      "ignoreChanges": [
        "example-*"
      ]
    }
  },
  "changelog": {
    "repo": "open-telemetry/opentelemetry-js",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: (Enhancement)",
      "bug": ":bug: (Bug Fix)",
      "core": ":wrench: Core",
      "document": ":books: (Refine Doc)",
      "feature-request": ":sparkles: (Feature)",
      "internal": ":house: (Internal)"
    },
    "cacheDir": ".changelog"
  }
}
